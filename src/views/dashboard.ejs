<section class="kpi">
  <div class="tile"><div class="k">Unidades</div><div class="v"><%= kpis.unidades %></div></div>
  <div class="tile"><div class="k">En taller</div><div class="v"><%= kpis.en_taller %></div></div>
  <div class="tile"><div class="k">Hoy</div><div class="v"><%= kpis.hoy %></div></div>
</section>

<section class="card">
  <h2>Ãšltimos movimientos</h2>
  <table>
    <thead><tr><th>ID</th><th>Placa</th><th>CEDIS</th><th>Tipo</th><th>Inicio</th><th>Fin</th></tr></thead>
    <tbody>
    <% mants.forEach(m => { %>
      <tr>
        <td><%= m.id %></td>
        <td><a href="/historial/<%= m.placa %>"><%= m.placa %></a></td>
        <td><%= m.cedis || '' %></td>
        <td><%= m.tipo %></td>
        <td><%= m.fecha_inicio ? dayjs(m.fecha_inicio).format('DD/MM/YYYY') : '' %></td>
        <td><%= m.fecha_fin ? dayjs(m.fecha_fin).format('DD/MM/YYYY') : '' %></td>
      </tr>
    <% }) %>
    </tbody>
  </table>
</section>
