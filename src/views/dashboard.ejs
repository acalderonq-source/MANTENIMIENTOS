<section class="kpi">
  <div class="tile"><div class="label">Unidades</div><div class="value"><%= kpis?.unidades || 0 %></div></div>
  <div class="tile"><div class="label">En taller</div><div class="value"><%= kpis?.en_taller || 0 %></div></div>
  <div class="tile"><div class="label">Hoy</div><div class="value"><%= kpis?.hoy || 0 %></div></div>
</section>

<section class="card">
  <h2>Ãšltimos 10 movimientos</h2>
  <table class="table">
    <thead>
      <tr><th>ID</th><th>Placa</th><th>Cede</th><th>Tipo</th><th>Inicio</th><th>Fin</th></tr>
    </thead>
    <tbody>
      <% (mants || []).forEach(m => { %>
        <tr>
          <td><%= m.id %></td>
          <td><a href="/historial/<%= m.placa %>"><%= m.placa %></a></td>
          <td><%= m.cedis || '-' %></td>
          <td><%= m.tipo %></td>
          <td><%= m.fecha_inicio ? dayjs(m.fecha_inicio).format('DD/MM/YYYY') : '-' %></td>
          <td><%= m.fecha_fin ? dayjs(m.fecha_fin).format('DD/MM/YYYY') : '-' %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</section>
