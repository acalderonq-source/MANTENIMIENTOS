<section class="card">
  <form class="filters" method="get" action="/">
    <label>
      Mes:
      <input type="month" name="mes" value="<%= mes || dayjs().format('YYYY-MM') %>">
    </label>
    <button class="btn">Filtrar</button>
  </form>

  <div class="kpi">
    <div class="tile"><small>Unidades</small><strong><%= kpis.unidades %></strong></div>
    <div class="tile"><small>En taller</small><strong><%= kpis.en_taller %></strong></div>
    <div class="tile"><small>Hoy</small><strong><%= kpis.hoy %></strong></div>
    <div class="tile"><small>Programados (<%= rango.ini %> → <%= rango.fin %>)</small><strong><%= kpis.programados_mes %></strong></div>
    <div class="tile"><small>Realizados (mes)</small><strong><%= kpis.realizados_mes %></strong></div>
    <div class="tile"><small>Pendientes (mes)</small><strong><%= kpis.pendientes_mes %></strong></div>
  </div>
</section>

<section class="card">
  <h2>Movimientos del mes</h2>
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th>#ID</th>
          <th>Placa</th>
          <th>Cede</th>
          <th>Tipo</th>
          <th>Inicio</th>
          <th>Fin</th>
          <th>Días</th>
        </tr>
      </thead>
      <tbody>
        <% (mants || []).forEach(m => { %>
          <tr>
            <td><%= m.id %></td>
            <td><a href="/historial/<%= m.placa %>"><%= m.placa %></a></td>
            <td><%= m.cedis || 'N/A' %></td>
            <td><%= m.tipo %></td>
            <td><%= m.fecha_inicio ? dayjs(m.fecha_inicio).format('DD/MM/YYYY') : '' %></td>
            <td><%= m.fecha_fin ? dayjs(m.fecha_fin).format('DD/MM/YYYY') : '' %></td>
            <td><%= m.duracion_dias ?? '' %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</section>
