<h2>Mantenimientos abiertos</h2>
<table>
  <thead><tr><th>ID</th><th>Placa</th><th>CEDIS</th><th>Tipo</th><th>Inicio</th></tr></thead>
  <tbody>
  <% if (!mants || !mants.length) { %>
    <tr><td colspan="5">Sin abiertos</td></tr>
  <% } else { mants.forEach(m => { %>
    <tr>
      <td><%= m.id %></td>
      <td><a href="/historial/<%= m.placa %>"><%= m.placa %></a></td>
      <td><%= m.cedis_nombre || 'N/D' %></td>
      <td><%= m.tipo %></td>
      <td><%= dayjs(m.fecha_inicio).format('YYYY-MM-DD') %></td>
    </tr>
  <% }) } %>
  </tbody>
</table>
