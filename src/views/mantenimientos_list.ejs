<section class="card">
  <h1>Mantenimientos abiertos</h1>

  <!-- Filtro por cede -->
  <form method="get" action="/mantenimientos" class="row gap">
    <label>Cede:
      <select name="cedis_id" onchange="this.form.submit()">
        <option value="">— Todas —</option>
        <% (cedis||[]).forEach(c => { %>
          <option value="<%= c.id %>" <%= String(cedisId||'')===String(c.id)?'selected':'' %>><%= c.nombre %></option>
        <% }) %>
      </select>
    </label>
  </form>

  <!-- Programar cede completa -->
  <form method="post" action="/unidades/programar-cede" class="row gap" style="margin-top:8px;">
    <label>Programar cede completa:
      <select name="cedis_id" required>
        <option value="">— Seleccionar cede —</option>
        <% (cedis||[]).forEach(c => { %>
          <option value="<%= c.id %>"><%= c.nombre %></option>
        <% }) %>
      </select>
    </label>
    <button class="btn primary">Programar</button>
  </form>

  <table class="table">
    <thead>
      <tr>
        <th>ID</th><th>Placa</th><th>Cede</th><th>Tipo</th><th>Fecha</th><th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% (mants||[]).forEach(m => { %>
        <tr>
          <td><%= m.id %></td>
          <td><a href="/historial/<%= m.placa %>"><%= m.placa %></a></td>
          <td><%= m.cedis_nombre || '—' %></td>
          <td><%= m.tipo %></td>
          <td><%= m.fecha_inicio ? dayjs(m.fecha_inicio).format('DD/MM/YYYY') : '—' %></td>
          <td>
            <!-- Se realizó (trabajos + comentario) -->
            <form method="post" action="/mantenimientos/<%= m.id %>/realizado<%= cedisId ? ('?cedis_id='+cedisId) : '' %>" class="row" style="gap:.5rem; flex-wrap:wrap;">
              <label><input type="checkbox" name="trabajos" value="Cambio de aceite"> Aceite</label>
              <label><input type="checkbox" name="trabajos" value="Cambio de filtros"> Filtros</label>
              <label><input type="checkbox" name="trabajos" value="Ajuste de frenos"> Frenos</label>
              <label><input type="checkbox" name="trabajos" value="Rotación de llantas"> Llantas</label>
              <label><input type="checkbox" name="trabajos" value="Revisión de correas"> Correas</label>
              <input type="text" name="comentario" placeholder="Comentario" style="min-width:220px;">
              <button class="btn success">✅ Se realizó</button>
            </form>

            <!-- Eliminar (opcional) -->
            <form method="post" action="/mantenimientos/<%= m.id %>/delete<%= cedisId ? ('?cedis_id='+cedisId) : '' %>" onsubmit="return confirm('¿Eliminar mantenimiento <%= m.id %>?')" style="margin-top:.5rem;">
              <button class="btn danger">🗑️ Eliminar</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</section>
