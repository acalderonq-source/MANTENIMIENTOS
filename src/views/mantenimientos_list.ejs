
<section class="card">
  <div class="card-head">
    <h1>Mantenimientos</h1>
  </div>

  <div class="table-wrap">
    <table class="table">
      <thead>
        <tr>
          <th>ID</th><th>Placa</th><th>CEDIS</th><th>Tipo</th><th>Inicio</th><th>Fin</th><th>Días</th><th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% if (!mants.length) { %>
          <tr><td colspan="8" class="muted">Sin registros.</td></tr>
        <% } %>
        <% mants.forEach(m => { %>
          <tr>
            <td><%= m.id %></td>
            <td><%= m.placa %></td>
            <td><%= m.cedis_nombre || 'N/A' %></td>
            <td><%= m.tipo %></td>
            <td><%= m.fecha_inicio ? dayjs(m.fecha_inicio).format('DD/MM/YYYY') : '—' %></td>
            <td><%= m.fecha_fin ? dayjs(m.fecha_fin).format('DD/MM/YYYY') : '—' %></td>
            <td><%= m.duracion_dias ?? '—' %></td>
            <td>
              <% if (!m.fecha_fin) { %>
                <form method="post" action="/mantenimientos/<%= m.id %>/realizado" style="display:inline">
                  <button class="btn success">✅ Se realizó</button>
                </form>
              <% } else { %>
                <span class="muted">Cerrado</span>
              <% } %>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</section>
