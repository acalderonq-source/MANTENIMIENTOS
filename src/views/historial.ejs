<section class="card">
  <h1>Historial de mantenimientos</h1>
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th>#ID</th>
          <th>Placa</th>
          <th>Cede</th>
          <th>Tipo</th>
          <th>Inicio</th>
          <th>Fin</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% (mants || []).forEach(m => { %>
          <tr>
            <td><%= m.id %></td>
            <td><a href="/historial/<%= m.placa %>"><%= m.placa %></a></td>
            <td><%= m.cedis_nombre || 'N/A' %></td>
            <td><%= m.tipo %></td>
            <td><%= m.fecha_inicio ? dayjs(m.fecha_inicio).format('DD/MM/YYYY') : '' %></td>
            <td><%= m.fecha_fin ? dayjs(m.fecha_fin).format('DD/MM/YYYY') : '' %></td>
            <td>
              <!-- Eliminar (POST alias) -->
              <form method="post" action="/mantenimientos/<%= m.id %>/delete" style="display:inline" onsubmit="return confirm('Â¿Eliminar mantenimiento cerrado #<%= m.id %>?');">
                <button class="btn danger">ğŸ—‘ Eliminar</button>
              </form>
              <!-- Alternativa con method-override
              <form method="post" action="/mantenimientos/<%= m.id %>?_method=DELETE" style="display:inline" onsubmit="return confirm('Â¿Eliminar mantenimiento cerrado #<%= m.id %>?');">
                <button class="btn danger">ğŸ—‘ Eliminar</button>
              </form>
              -->
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</section>
