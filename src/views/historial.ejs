<section class="card">
  <h1>Historial (cerrados)</h1>
  <table class="table">
    <thead>
      <tr><th>ID</th><th>Placa</th><th>Cede</th><th>Tipo</th><th>Inicio</th><th>Fin</th><th>Motivo / Hecho</th></tr>
    </thead>
    <tbody>
      <% (mants || []).forEach(m => { %>
        <tr>
          <td><%= m.id %></td>
          <td><a href="/historial/<%= m.placa %>"><%= m.placa %></a></td>
          <td><%= m.cedis_nombre || '-' %></td>
          <td><%= m.tipo %></td>
          <td><%= m.fecha_inicio ? dayjs(m.fecha_inicio).format('DD/MM/YYYY') : '-' %></td>
          <td><%= m.fecha_fin ? dayjs(m.fecha_fin).format('DD/MM/YYYY') : '-' %></td>
          <td><%= m.motivo || '-' %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</section>
