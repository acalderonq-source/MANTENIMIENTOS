<section class="card">
  <form method="get" class="row gap">
    <label>
      Mes:
      <input type="month" name="mes" value="<%= (typeof mes !== 'undefined' && mes) ? mes : dayjs().format('YYYY-MM') %>">
    </label>
    <button class="btn">Filtrar</button>
  </form>
</section>

<section class="card">
  <h2>Últimos movimientos</h2>
  <table class="tbl">
    <thead>
      <tr><th>ID</th><th>Placa</th><th>CEDIS</th><th>Tipo</th><th>Inicio</th><th>Fin</th></tr>
    </thead>
    <tbody>
      <% (mants || []).forEach(m => { %>
        <tr>
          <td><%= m.id %></td>
          <td><a href="/historial/<%= m.placa %>"><%= m.placa %></a></td>
          <td><%= m.cedis || '-' %></td>
          <td><%= m.tipo %></td>
          <td><%= m.fecha_inicio ? dayjs(m.fecha_inicio).format('DD/MM/YYYY') : '—' %></td>
          <td><%= m.fecha_fin ? dayjs(m.fecha_fin).format('DD/MM/YYYY') : '—' %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</section>
