<section class="card">
  <h1>Unidades</h1>
  <table>
    <thead>
      <tr><th>Placa</th><th>Tipo</th><th>CEDIS</th><th>Estado</th><th>Acciones</th></tr>
    </thead>
    <tbody>
    <% unidades.forEach(u => { %>
      <tr>
        <td><a href="/historial/<%= u.placa %>"><%= u.placa %></a></td>
        <td><%= u.tipo %></td>
        <td><%= u.cedis_nombre || '' %></td>
        <td><%= u.estado %></td>
        <td>
          <form method="post" action="/unidades/<%= u.id %>/programar" style="display:inline">
            <button class="btn primary">Programar 1</button>
          </form>
        </td>
      </tr>
    <% }) %>
    </tbody>
  </table>
</section>

<section class="card">
  <h2>Agregar unidad</h2>
  <form method="post" action="/unidades">
    <div class="row">
      <div><label>Placa</label><input name="placa" required /></div>
      <div><label>Tipo</label><input name="tipo" placeholder="CAMION/SEMIRREMOLQUE" /></div>
      <div><label>CEDIS</label><input name="cedis_nombre" placeholder="TRANSPORTADORA" /></div>
    </div>
    <button class="btn">Crear</button>
  </form>
</section>
