# =========================
# App
# =========================
PORT=3000
SESSION_SECRET=algo_super_secreto
OPENAI_MODEL=gpt-5
NODE_ENV=development

# =========================
# MySQL (Railway - EXTERNO)
# =========================
# Conexión directa (host/puerto/usuario/clave/base)
DB_HOST=switchyard.proxy.rlwy.net
DB_PORT=24607
DB_USER=root
DB_PASSWORD=
DB_NAME=railway

# Importante: conexiones externas a Railway requieren SSL
DB_SSL=true

# Forzar host interno de Railway (NO usar en local)
FORCE_RAILWAY_INTERNAL=0

# =========================
# Variables estilo MYSQL* (opcionales)
# (tu código ya soporta ambos nombres)
# =========================
MYSQLHOST=${DB_HOST}
MYSQLPORT=${DB_PORT}
MYSQLUSER=${DB_USER}
MYSQLPASSWORD=${DB_PASSWORD}
MYSQLDATABASE=${DB_NAME}


# =========================
# Opcionales recomendados para tu db.js reforzado
# =========================
DB_DATE_STRINGS=true
DB_NAMED_PLACEHOLDERS=false
DB_TIMEZONE=Z

# =========================
# (Opcional) Config local de respaldo por si algún día conectas a MySQL local
# =========================
LOCAL_DB_HOST=127.0.0.1
LOCAL_DB_PORT=3306
LOCAL_DB_USER=root
LOCAL_DB_PASS=
LOCAL_DB_NAME=flota
